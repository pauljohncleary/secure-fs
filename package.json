{
  "name": "secure-fs",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "js": "browserify ./src/js/*.js | uglifyjs > ./public/js/bundle.js",
    "css": "cat ./src/css/* | cleancss -o   ./public/css/bundle.css",
    "build": "npm run js & npm run css",
    "watch-css": "nodemon --ext styl --watch ./src/css --exec 'npm run css'",
    "watch-js": "nodemon --ext js --watch ./src/js --exec 'npm run js'",
    "watch": "npm run watch-js & npm run watch-css & npm start"
  },
  "dependencies": {
    "body-parser": "~1.13.2",
    "cookie-parser": "~1.3.5",
    "debug": "~2.2.0",
    "express": "~4.13.1",
    "express-livereload": "0.0.24",
    "jade": "~1.11.0",
    "jquery": "^2.1.4",
    "morgan": "~1.6.1",
    "serve-favicon": "~2.3.0",
    "simplewebrtc": "^1.19.1",
    "socket.io": "0.9.x"
  },
  "description": "Secure File Sending",
  "main": "bin/www",
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pauljohncleary/secure-fs.git"
  },
  "author": "Paul Cleary",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pauljohncleary/secure-fs/issues"
  },
  "homepage": "https://github.com/pauljohncleary/secure-fs#readme",
  "devDependencies": {
    "browserify": "^11.2.0",
    "clean-css": "^3.4.5",
    "live-server": "^0.8.1",
    "sass": "^0.5.0",
    "uglify-js": "^2.4.24"
  }
}
