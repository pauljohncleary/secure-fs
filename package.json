{
  "name": "secure-fs",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "lint": "eslint src/js/**/* src/js/*.js *.js routes/*.js",
    "watch:js": "watchify ./src/js/main.js -d -t [babelify --sourceMap --sourceMapRelative='$PWD' ] -o ./public/js/bundle.js",
    "prejs:dev": "npm run lint",
    "build:js": "browserify ./src/js/*.js -t babelify | uglifyjs > ./public/js/bundle.js",
    "build:css": "cat ./src/css/* | cleancss -o ./public/css/bundle.css",
    "build": "npm run build:js & npm run build:css",
    "watch": "npm start & npm run watch:js"
  },
  "dependencies": {
    "body-parser": "~1.13.2",
    "cookie-parser": "~1.3.5",
    "debug": "~2.2.0",
    "express": "~4.13.1",
    "express-livereload": "0.0.24",
    "jade": "~1.11.0",
    "jquery": "^2.1.4",
    "morgan": "~1.6.1",
    "react": "^0.13.3",
    "react-redux": "^3.1.0",
    "redux": "^3.0.2",
    "serve-favicon": "~2.3.0",
    "simplewebrtc": "^1.19.1",
    "socket.io": "0.9.x"
  },
  "description": "Secure File Sending",
  "main": "bin/www",
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pauljohncleary/secure-fs.git"
  },
  "author": "Paul Cleary",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pauljohncleary/secure-fs/issues"
  },
  "homepage": "https://github.com/pauljohncleary/secure-fs#readme",
  "devDependencies": {
    "babelify": "^6.3.0",
    "browserify": "^11.2.0",
    "clean-css": "^3.4.5",
    "jsxhint": "^0.15.1",
    "live-server": "^0.8.1",
    "redux-devtools": "^2.1.5",
    "sass": "^0.5.0",
    "uglify-js": "^2.4.24",
    "watch": "^0.16.0",
    "watchify": "^3.4.0"
  }
}
